<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Students">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="49*"/>
                        <ColumnDefinition Width="715*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="First Name" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" Grid.ColumnSpan="3"/>
                    <Label Content="Last Name" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="68"/>
                    <Button Content="Add" HorizontalAlignment="Left" Margin="1,55,0,0" VerticalAlignment="Top" Width="57" Grid.ColumnSpan="3" Command="{Binding AddStudentCommand}"/>
                    <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,6,0,0" TextWrapping="Wrap" Text="{Binding StudentFirstName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="705"/>
                    <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,29,0,0" TextWrapping="Wrap" Text="{Binding StudentLastName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="705"/>
                    <ListBox ItemsSource="{Binding Students}" Margin="1,80,0,0" Grid.ColumnSpan="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Remove" Command="{Binding DataContext.RemoveStudentCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Width="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Teachers">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="28*"/>
                        <ColumnDefinition Width="354*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Teacher Name" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="4"/>
                    <Label Content="Assign Student" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="4" Height="26"/>
                    <Label Content="Assign Course" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="4" Height="26"/>
                    <TextBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,6,0,0" TextWrapping="Wrap" Text="{Binding TeacherName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="696" Height="18"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Width="696" Height="22" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FirstName}" Foreground="Black"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="696" Height="22" ItemsSource="{Binding AllCourses}" SelectedItem="{Binding SelectedCourse}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Foreground="Black"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="Add" HorizontalAlignment="Left" Margin="1,77,0,0" VerticalAlignment="Top" Width="57" Grid.ColumnSpan="3" Command="{Binding AddTeacherCommand}" Height="20"/>
                    <ListBox ItemsSource="{Binding Teachers}" Margin="1,102,0,0" Grid.ColumnSpan="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Remove" Command="{Binding DataContext.RemoveTeacherCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Width="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Courses">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="701*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Select Student" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="86" Grid.ColumnSpan="4" Margin="10,4,0,0"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Width="680" Height="22" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudentForCourses}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="Black"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Content="Add Course" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="77" Grid.ColumnSpan="3" Height="26" RenderTransformOrigin="0.505,-0.112"/>
                    <TextBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" Text="{Binding NewCourseName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="680" Height="22"/>
                    <Button Content="Add" HorizontalAlignment="Left" Margin="1,70,0,0" VerticalAlignment="Top" Width="57" Grid.ColumnSpan="3" Command="{Binding AddCourseCommand}" Height="20"/>
                    <ListBox ItemsSource="{Binding SelectedStudentForCourses.Courses}" Margin="1,104,0,0" Grid.ColumnSpan="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Remove" Command="{Binding DataContext.RemoveCourseCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Width="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>